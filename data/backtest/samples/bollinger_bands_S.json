{
  "series": {
    "bbands": {
      "method": "BB",
      "period": 20,
      "stddev": 2
    },
    "bb_upper": {
      "method": "SELECT_OUTPUT",
      "name": "upper-band",
      "source": {
        "method": "REFERENCE",
        "name": "bbands"
      }
    },
    "bb_lower": {
      "method": "SELECT_OUTPUT",
      "name": "lower-band",
      "source": {
        "method": "REFERENCE",
        "name": "bbands"
      }
    }
  },
  "risk": {
    "method": "ATR",
    "atr": {
      "period": 14,
      "multiplier": 2
    },
    "percentage": 5,
    "value": 1000
  },
  "stopLoss": {
    "isTrailing": true
  },
  "takeProfit": {
    "riskMultiplier": 2
  },
  "shortPosition": {
    "entry": {
      "signal": {
        "filter": "CROSSOVER",
        "signal": "CLOSE",
        "reference": {
          "method": "REFERENCE",
          "name": "bb_lower"
        }
      }
    },
    "exit": {
      "signal": {
        "filter": "CROSSUNDER",
        "signal": "CLOSE",
        "reference": {
          "method": "REFERENCE",
          "name": "bb_upper"
        }
      }
    }
  }
}