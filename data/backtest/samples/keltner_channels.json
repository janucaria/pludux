{
  "series": {
    "kchannel": {
      "method": "KC",
      "ma": {
        "method": "EMA",
        "period": 20
      },
      "range": {
        "method": "ATR",
        "period": 10
      },
      "multiplier": 2
    },
    "kc_upper": {
      "method": "OUTPUT_BY_NAME",
      "name": "upper-band",
      "source": {
        "method": "REFERENCE",
        "name": "kchannel"
      }
    },
    "kc_lower": {
      "method": "OUTPUT_BY_NAME",
      "name": "lower-band",
      "source": {
        "method": "REFERENCE",
        "name": "kchannel"
      }
    }
  },
  "risk": {
    "method": "ATR",
    "atr": {
      "period": 14,
      "multiplier": 2
    },
    "percentage": 5,
    "value": 1000
  },
  "stopLoss": true,
  "takeProfit": {
    "riskMultiplier": 5
  },
  "longPosition": {
    "entry": {
      "signal": {
        "filter": "CROSSOVER",
        "signal": "CLOSE",
        "reference": {
          "method": "REFERENCE",
          "name": "kc_lower"
        }
      }
    },
    "exit": {
      "signal": {
        "filter": "CROSSUNDER",
        "signal": "CLOSE",
        "reference": {
          "method": "REFERENCE",
          "name": "kc_upper"
        }
      }
    }
  }
}